{
  "name": "electron-app",
  "private": true,
  "version": "0.1.0",
  "description": "Alius Electron App",
  "author": "Alius Team",
  "main": "dist/electron/main.js",
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint \"{src,electron}/**/*.{ts,tsx}\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"{src,electron}/**/*.{ts,tsx}\" --fix",
    "preview": "vite preview",
    "dev": "tsc -p tsconfig.electron.json && concurrently \"vite\" \"npm run electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "electron:build": "npm run build && tsc -p tsconfig.electron.json && electron-builder --dir"
  },
  "build": {
    "appId": "com.alius.electron-app",
    "productName": "Alius Electron App",
    "files": [
      "dist/**/*",
      "!node_modules/**/*"
    ],
    "directories": {
      "output": "dist/release-builds",
      "buildResources": "build"
    },
    "win": {
      "target": "portable",
      "artifactName": "${productName}.${ext}"
    },
    "asar": true,
    "forceCodeSigning": false
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "ws": "^8.14.2",
    "qrcode.react": "^4.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "tailwindcss": "^3.4.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "electron": "25.3.1",
    "electron-builder": "^24.4.0",
    "postcss": "^8.4.32",
    "typescript": "^5.0.2",
    "vite": "^5.2.0",
    "wait-on": "^7.0.1"
  }
}
